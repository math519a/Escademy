<div class="coaching">
    <div class="coachinginfo pb-0">
        <div class="container" style=" padding-top: 100px; padding-bottom: 150px;">
            <div class="row">
                <div class="col-lg-8">
                    <div class="whitebox white" style="
">
                        <div class="row">
                            <div class="col-lg-8">
                                <h3 class="float-left mr-2"><strong>Order #@ViewBag.OrderNo </strong></h3>
                                <div class="pt-2"></div>
                                <div class="flclear"></div>
                                <div class="spacer5"></div>
                                <div>Buyer: <span class="textorange">@ViewBag.BuyerName</span> @ViewBag.OrderDate </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="text-right"><h3><strong> @ViewBag.TotalAmount$</strong></h3></div>
                            </div>
                        </div>
                        <div class="spacer40"></div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width:50%;">Item</th>
                                        <th style="width:20%;">Quantity</th>
                                        <th class="text-right" style="width:30%;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @foreach (var item in ViewBag.OrderItemList)
                                        {
                                        <td>@item.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-right">@item.Price.ToString().Replace(",",".")$</td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

