@{
    ViewBag.Title = "reset_password";
}

@section styles {
    <link href="~/Content/login.css" rel="stylesheet">
}

@{
    if (ViewBag.mail == null)
    {
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="display-3">Invalid Reset Link</h1>
                <p class="lead text-muted">Please try to click the reset password link again.</p>
            </div>
        </section>
    }
    else
    {

        <div class="container login-container">
            <div class="row">
                <div class="col-md-6" style="margin-left: auto; margin-right: auto;">
                    <div class="login-form-1">
                        <h3 class="display-4">New password</h3>
                        <form id="frmReg" method="post">
                            <input type="hidden" name="token" value="@ViewBag.token" />

                            <p style="text-align: center">Insert your new password</p>
                            <div id="confirmMailAlert" class="alert alert-danger collapse">
                                <a id="linkClose" href="#" class="close">&times;</a>
                                <strong>the two passwords are not identical!</strong>
                            </div>
                            <div class="form-group">
                                <input id="inputPassword" name="Password" type="text" class="form-control" placeholder="Password" value="" />
                            </div>
                            <div class="form-group">
                                <input id="inputConfirm" name="ConfirmPassword" type="text" class="form-control" placeholder="Confirm password" value="" />
                            </div>
                            <div class="form-group" style="margin-top: 8px;">
                                <input type="submit" class="btnSubmit" value="Reset" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}


@section scripts{
    <script type="text/javascript">
        $("#frmReg").submit(function (e) {

            if ($("#inputPassword").val() !== $("#inputConfirm").val()) {
                e.preventDefault();

                $("#confirmMailAlert").show('fade');
            };
        });
    </script>

}

