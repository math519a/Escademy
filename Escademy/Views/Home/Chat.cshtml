@using Escademy.Models;
@{
    ViewBag.Title = "Chat";
    User user = (User)Session["User"];
    if (user != null)
    {
        <div class="container" style="padding-top: 40px">
            <h3 class="text-center"></h3>
            <div class="messaging">
                <div class="inbox_msg">
                    <div class="inbox_people">
                        <div class="headind_srch">
                            <div class="recent_heading">
                                <h4>Recent</h4>
                            </div>
                            <div class="srch_bar">
                                <div class="stylish-input-group">
                                    <input type="text" class="search-bar" placeholder="Search">
                                    <span class="input-group-addon">
                                        <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="inbox_chat">
                            <!-- loaded by chat.js -->
                        </div>
                    </div>
                    <div>
                        <div class="headind_srch" style="padding: 13px">
                            <div class="recent_heading">
                                <h4 id="txtUsernameA">Username</h4>
                            </div>
                        </div>
                        <div class="mesgs">
                            <div id="msgHistory" class="msg_history">
                                <!-- loaded by chat.js -->
                            </div>
                            <div id="dv_TypingIndicator" class="typingStyle" style="display:none;">
                            </div>
                            <div class="type_msg">
                                <div class="input_msg_write">
                                    <textarea id="txtMessageField" type="text" style="border-radius:10px; overflow: hidden; outline-width: 0px; border-width: 1px; margin: 0px; height: 40px; padding: 5px; width: 100%; resize: none;" class="write_msg" placeholder="Type a message"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <input type="hidden" id="hdnCurrentUserName" value="" />
        <input type="hidden" id="hdnCurrentUserID" value="" />
    }

}
@section scripts {
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
@*<script src="/Scripts/jquery.js"></script>*@
@*<script src="/Scripts/jquery.signalR-2.4.1.min.js"></script>
<script src="/signalr/hubs"></script>
<script src="/Scripts/chat.js"></script>*@

}
@section styles {
    <link href="~/Content/Chat.css" rel="stylesheet" />
    <style>
        .chat_list {
            cursor: pointer;
        }

            .chat_list:hover {
                background: rgba(241, 90, 41, 0.05);
            }

            .chat_list.active_chat:hover {
                background: rgba(241, 90, 41, 0.15);
            }

        .break text p {
            word-wrap: break-word;
        }
    </style>
}