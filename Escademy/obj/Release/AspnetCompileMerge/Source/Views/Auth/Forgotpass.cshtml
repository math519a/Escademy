@{
    ViewBag.Title = "Login";
}

@section styles {
    <link href="~/Content/login.css" rel="stylesheet">
}

@{

    if (ViewBag.mail_sent)
    {
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="display-3">Email Sent!</h1>
                <p class="lead text-muted">Please follow the instructions in the email to proceed with the password reset.</p>
            </div>
        </section>
    }
    else
    {
        <div class="container login-container">
            <div class="row">
                <div class="col-md-6" style="margin-left: auto; margin-right: auto;">
                    <div class="login-form-1">
                        <h3 class="display-4">Forgot password?</h3>
                        <p style="text-align: center">Insert your email and we will send a reset link to you!</p>
                        <form action="@Url.Action("Forgotpass", "Auth")" method="post">
                            <div class="form-group">
                                <input name="Email" type="text" class="form-control" placeholder="Email" value="" />
                            </div>
                            <div class="form-group" style="margin-top: 8px;">
                                <input type="submit" class="btnSubmit" value="Send Email" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
