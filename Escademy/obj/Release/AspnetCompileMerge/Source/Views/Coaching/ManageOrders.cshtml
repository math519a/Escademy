                                @{
                                    var ActiveOrderList = new List<Escademy.ViewModels.OrderDetailVM>();
                                    ActiveOrderList = ViewBag.ActiveOrders;
                                    if (ActiveOrderList != null && ActiveOrderList.Count > 0)
                                    {
                                        <table class="table" cellspacing="0">
                                            <thead>
